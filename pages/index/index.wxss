@import "/style/weui.wxss";


/* 悬浮按钮 */
.buttom{  
  width: 100vw;height: 14.6vw;background: #fff;margin-top: 1.6vw;  
  display: flex;flex-direction: row;position: fixed;bottom: 0 ;
}  
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.post {
    float: right;
    background-color: #ffffff;
    position: fixed;
    bottom: 20px;
    right: 10px;  
    border: 0 solid #ffffff;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
}
.placeholder{
    font-size: 12px;
    margin-top: 10px;
    margin-bottom: 10px;
    margin-left: 20px;
    margin-right: 20px;
    padding: 0 10px;
    text-align: center;
    background-color: #ff6f00;
    height: 2.3em;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    line-height: 2.3em;
    color: #fff;
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.root {
    background: #efeff4;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom:0;
}
.line {
    padding-top: 30rpx;
}
.line text {
    color: #6D6D72;
    font-size: 28rpx;
    margin-left: 40rpx;
}
.line-control {
    border-bottom: #d9d9d9 1px solid;
    border-top: #d9d9d9 1px solid;
    background-color: #fff;
    margin-top: 10rpx;
}
.line-control .item {
    box-sizing: border-box;
    text-align: left;
    color: #007AFF;
    font-size: 32rpx;
    padding-left: 40rpx;
    position: relative
}
.line-control .item:active {
    background: #d9d9d9;
}
.line-control .item.flag {
    color: #333;
}
.line-control .item.flag:active {
    background: #fff;
}
.line-control .item-inner {
    border-bottom: #d9d9d9 1px solid;
    height: 90rpx;
    line-height: 90rpx;
}
.line-control .item:last-child .item-inner {
     border:none;
}
.line-control .switch {
    vertical-align: middle;
    line-height: normal;
}
.line-control text {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
    color: #8E8E93;
    margin-left: 0;
}
.line-control .switch-status {
    color: #999;
    position: absolute;
    right: 40rpx;
    top: 0;
}
.line-control .item.disabled {
    color: #999
}
.line-control .item.disabled:active {
    background: none;
}
.line .demo {
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    text-align: left;
    color: #333;
    background-color: #fff;
    position: relative;
    font-size: 32rpx;
    padding-left: 40rpx;
}
.line .demo .link {
    position: absolute;
    right: 40rpx;
    top: 0rpx;
    color: #8E8E93;
}
.hide {
    display: none
}

@media (max-width : 360px) {
    .line text {
        font-size: 36rpx;
    }
    .line-control .item-inner {
        border-bottom: #d9d9d9 1px solid;
        height: 110rpx;
        line-height: 110rpx;
    }
    .line-control .item {
        height: 110rpx;
        line-height: 110rpx;
        box-sizing: border-box;
        text-align: left;
        color: #007AFF;
        font-size: 38rpx;
        padding-left: 40rpx;
        position: relative
    }
    .line .demo {
        height: 110rpx;
        line-height: 110rpx;
        font-size: 38rpx;
        padding-left: 40rpx;
    }
}