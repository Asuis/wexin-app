/* pages/meeting/create/select-type/select-type.wxss */
 @import '/zan-ui/index.wxss';
.container{
   display: flex;
   justify-content: space-around;
   margin-top: 40rpx;
   margin-bottom: 40rpx;
 }
.we-button{
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.we-msg{
  display: flex;
  justify-content: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  font-size: 14px;
}
 .m-type{
   padding: 20rpx;
   border: #cdcdcd 1px solid;
   box-sizing: border-box;
   border-radius: 10rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
 }
 .m-type image{
  max-width: 100rpx;
  max-height: 80rpx;
 }

 .we-card{
  padding: 20rpx;
  margin: 10rpx;
  width:260rpx;
  background-color:white;
  /* box-shadow:0px 1px 1px #999; */
  border-radius: 10rpx;
  display: flex;
}
.we-card image{
  max-width: 80rpx;
  max-height: 80rpx;
  align-self: center;
}
.we-card-title{
  margin: 20rpx;
  font-size: 12px;
  font-weight: 600;
}
.we-card-active{
  border: #ff6f00 1px solid;
}