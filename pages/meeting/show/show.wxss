/* pages/meeting/show/show.wxss */
.container{
  background-color: #e6e6e6;
  display: flex;
  flex-direction: column;
}
.wapper{
  display: flex;
  justify-content: space-around;
}
 .we-card{
  width:340rpx;
  background-color:white;
  /* box-shadow:0px 1px 1px #999; */
   border: #e6e6e6 1px solid; 
  border-radius: 10rpx;
    display: flex; 
  flex-direction: column; 
  flex-wrap: wrap;
  margin: 10rpx;
} 
.we-item{
  display: inline-block;
}
.we-card image{
  max-width: 340rpx;
  max-height: 200rpx;
  align-self: center;
  display: block;
}
.we-card-title{
  margin: 15rpx;
  font-size: 14px;
  word-break: break-all; word-wrap:break-word;
  white-space: normal;
  display: block;
}
.we-card-large{
  margin: 10rpx;
  background-color:white;
  /* box-shadow:0px 1px 1px #999; */
   border: #e6e6e6 1px solid; 
   box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.we-card-large image{
  width: 100%;
}
.we-card-x{
  display: flex;
  flex-direction: column;
  justify-content: center;
   border: #e6e6e6 1px solid; 
  border-radius: 10rpx;
}
.we-card-x image{
  margin: 20rpx;
  padding: 10rpx;
  height: 100rpx;
}
.we-card-x .we-title{
  font-size: 14px;
}
.we-card-x text{
  font-size: 12px;
}
