/* pages/red-paper/red-paper.wxss */
.container{
    background-color: #F9F9F9;
    height: 100%;
    width: 100%;
}
.theme-container{
    position: relative;
    width: 100%;
    height: 220rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.theme-container .back{
    position: absolute;
    background-color: #E8414D;
    width: 100%;
    height: 100%;
}
.container .show {
    color: #fff;
    z-index: 3;
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
}
.show .text{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}