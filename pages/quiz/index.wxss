.container{
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
  .theme-container{
    position: relative;
    width: 100%;
    height: 360rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .theme-container .back{
    position: absolute;
    width: 100%;
    height: 100%;
  }
  .container .show {
    color: #fff;
    z-index: 3;
    margin-left: 60rpx;
    display: flex;
    flex-direction: column;
  }
  .show .text{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
  }
  .login{
    text-align: center;
    width: 100%;
  }
  .login button{
    width: 200rpx;
  }
  .touch{
    background: #e9e4e4;
  }
  .btns{
      display: flex;
      justify-content: flex-start;
      position: fixed;
      width: 100%;
      bottom: 0;
  }
  .btns button{
      flex: 1 1 auto;
  }