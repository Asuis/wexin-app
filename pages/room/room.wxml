<!--pages/room/room.wxml-->
<view>
   <view>
    <view>
      <chat-message messages="{{messages}}" roomHeight="{{room_height}}" toMessage="{{messageIndex}}"></chat-message>
    </view>
  </view>
<m-button bindTap></m-button>
<input-bar inputMessage="{{inputMessage}}" bindrp="torp" bindba="obar" bindsend="sendMessage"></input-bar> 
<!-- <r-dialog></r-dialog> -->
</view>
<view class="doommview">
  <block wx:for="{{doommData}}" wx:key="id">
      <text wx:if="{{item.display}}" class="aon" style="animation: first {{item.time}}s linear forwards;top:{{item.top}}%;color:{{item.color}};">
          {{item.text}}
      </text>
  </block>
</view>
